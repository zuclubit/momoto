{
  "name": "@momoto/wasm",
  "version": "5.0.0",
  "description": "WebAssembly bindings for Momoto color perception metrics",
  "main": "dist/momoto_wasm.js",
  "types": "dist/momoto_wasm.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "wasm-pack build --target web --out-dir dist",
    "build:nodejs": "wasm-pack build --target nodejs --out-dir dist-node",
    "build:bundler": "wasm-pack build --target bundler --out-dir dist-bundler",
    "build:all": "npm run build && npm run build:nodejs && npm run build:bundler",
    "test": "wasm-pack test --headless --chrome"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/momoto/momoto.git",
    "directory": "crates/momoto-wasm"
  },
  "keywords": [
    "wasm",
    "color",
    "contrast",
    "accessibility",
    "apca",
    "wcag",
    "oklch"
  ],
  "author": "Momoto Team",
  "license": "MIT",
  "devDependencies": {
    "wasm-pack": "^0.12.1"
  }
}
